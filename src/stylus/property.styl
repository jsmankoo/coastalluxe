.Property
  .owl-theme .owl-controls .owl-page span
    size 8px 8px
    background: darkBlue
  .Jumbotron
    background-repeat: no-repeat
    background-size: cover
    background-position: center
    position relative
    size 100% 300px
    .bgTint
      background-color overJumboTronTint
      size 100% 300px
      .jumbotron-wrapper
        align(b)
        width 100%
        .title
          color darkBlue
          font-family: otherFont
          font-weight: 700
          font-size 60px
          text-align: center
          +below(767px)
            font-size 40px
        .border
          border-top 1px solid lightBlue
          +below(767px)
            margin 10px auto
            size 200px auto
          +above(768px)
            margin 20px auto
            size 340px auto
        .info
          color darkBlue
          text-align: center
          font-family: otherFont
          font-weight: 700
          .address
            font-size: 20px
            line-height: 25px
          i.fa
            font-size 25px
            +below(767px)
              margin 20px auto 0px
            +above(768px)
              margin 20px auto 0px
  .Details
    margin-bottom 120px
    .slideShow
      padding 60px 0px 0px
      +below(767px)
        padding 30px 0px 0px
      .item.img-wrapper
        background-repeat: no-repeat
        background-size: cover
        background-position: center
        size 1280px 600px
        max-width: 100%
        margin auto auto 40px
        +below(767px)
          size 100% 300px
    .info
      center(1280px)
      margin 40px auto 60px
      // background-color: propInfoColor
      //   height 350px
      // +above(768px)
      .info-wrapper
        position: relative
        background-color: propInfoColor
        height 175px
        +below(767px)
          span(1/2, cycle: 2)
          // height 100%
        +above(768px)
          span(1/4)
          // height 100%
        .price
          align(b)
          width 100%
          color darkBlue
          text-align: center
          font-weight: 700
          font-family otherFont
          font-size 20px
          line-height 50px
          +below(767px)
            font-size 16px
        .bedBath
          align(b)
          width 100%
          color darkBlue
          text-align: center
          font-weight: 700
          font-family otherFont
          font-size 20px
          line-height 50px
          +below(767px)
            font-size 16px
        .area
          align(b)
          width 100%
          color darkBlue
          text-align: center
          font-weight: 700
          font-family otherFont
          font-size 20px
          line-height 50px
          +below(767px)
            font-size 16px
        .mls
          align(b)
          width 100%
          color darkBlue
          text-align: center
          font-weight: 700
          font-family otherFont
          font-size 20px
          line-height 50px
          +below(767px)
            font-size 16px
    .paragraph
      font-family: otherFont
      center(1100px)
      color darkBlue
      text-align: center
      // padding-top 40px
      h1
        col()
        h1()
        +above(768px)
          font-size: 50px
      h2
        col()
        h2()
      h3
        col()
        h3()
      h4
        col()
        h4()
      h5
        col()
        h5()
      h6
        col()
        h6()
      p
        normal()
        line-height 35px
        margin auto
        +below(767px)
          font-size 18px
        +above(768px)
          font-size 18px
  .Facilities
    padding-bottom 100px
    +below(767px)
      padding-bottom 50px
    .title
      text-align: center
      h1()
      color: darkBlue
      font-family: otherFont
      font-weight: 700
    #facilitiesSlide
      center(1280px)
      .owl-controls
        margin-top 30px
      .item
        .img-wrapper
          background-repeat: no-repeat
          background-size: cover
          background-position: center
          display: block
          margin auto
          position: relative
          +below(1280px)
            size 100% 300px
          +above(1281px)
            size 100% 600px
          .specialText
            background-color rgba(darkBlue, 0.50)
            absolute bottom 0px
            size 100% auto
            color white
            font-size 30px
            font-family: mainFont
            font-weight: 500
            text-align: center
            padding 12px 0px
            display: block
            +below(767px)
              font-size 25px
              padding 6px 0px
  .Featured
    padding-bottom 100px
    +below(767px)
      padding-bottom 50px
    .title
      text-align: center
      h1()
      color: darkBlue
      font-family: otherFont
      font-weight: 700
    #featuredSlide
      center(1280px)
      .owl-controls
        absolute bottom 30px
        width 100%
      .item
        .img-wrapper
          background-repeat: no-repeat
          background-size: cover
          background-position: center
          display: block
          margin auto
          size 530px 300px
          max-width: 100%
          position relative
          overflow hidden
          .specialText
            absolute bottom 0px
            background-color rgba(lightBlue, 0.50)
            size 100% auto
            color white
            font-size 30px
            font-family: mainFont
            font-weight: 500
            text-align: left
            padding 12px 40px
            +below(767px)
              text-align: center
              display: block
              font-size 25px
              padding 6px 0px
        .info
          size 530px auto
          max-width: 100%
          display block
          margin auto
          .name
            color darkBlue
            font-family: otherFont
            font-weight: 700
            +below(767px)
              font-size: 18px
              text-align: center
              margin 15px auto 0px
            +above(768px)
              font-size: 20px
              text-align: left
              padding-left 40px
              margin 20px auto 0px
          .price
            color darkBlue
            +below(767px)
              margin 15px auto 35px
              font-size 16px
              text-align: center
            +above(768px)
              margin 5px auto 75px
              font-size 18px
              text-align: left
              padding-left 40px
