.Building
  .owl-theme .owl-controls .owl-page span
    background: darkBlue
  .Jumbotron
    background-repeat: no-repeat
    background-size: cover
    background-position: center
    wrap()
    wrap('flexbox')
    wrap('middle')
    size 100% 300px
    .title
      col()
      col(1,1)
      color darkBlue
      font-family: otherFont
      font-weight: 700
      font-size 60px
      text-align: center
      +below(767px)
        font-size 40px
    .Buttons
      wrap()
      wrap 'center'
      col()
      .Button
        col()
        background-color: darkBlue
        color white
        font-weight: 700
        font-family: otherFont
        font-size 18px
        text-align: center
        margin 20px
        cursor: pointer;
      .forSale
      .forLease
        padding 5px 10px
  .Details
    margin 90px auto 0px
    +below(767px)
      margin 60px auto 0px
    .paragraph
      color darkBlue
      font-family: otherFont
      text-align: left;
      +below(767px)
        text-align: center
      h1
        h1()
        text-align: center
        margin 0px auto
      h2
        h2()
        text-align: center
        margin 0px auto
      h3
        h3()
        text-align: center
        margin 0px auto
      h4
        h4()
        text-align: center
        margin 0px auto
      h5
        h5()
        text-align: center
        margin 0px auto
      h6
        h6()
        text-align: center
        margin 0px auto
      p
        margin: 0px auto
        font-weight: 500
        font-size 14px
    .intro
      wrap()
      wrap 'center'
      wrap 'gutter', 50
      wrap 'outside', 50
      size 900px auto
      max-width: 100%
      margin auto
      .img-wrapper
        col()
        col(2,7)
        height 375px
        background-repeat: no-repeat
        background-size: cover
        background-position: center
        +below(767px)
          col(1,1)
      .paragraph
        col()
        col(5,7)
        h6()
        +below(767px)
          col(1,1)
        i.fa
          font-size 25px
    .rest
      wrap()
      wrap 'center'
      wrap 'gutter', 50
      size 900px auto
      max-width: 80%
      margin auto
      .paragraph
        h6()
  .Facilities
    padding 100px 0px
    +below(767px)
      padding 50px 0px
    .title
      text-align: center
      h1()
      color: darkBlue
      font-family: otherFont
      font-weight: 700
    #facilitiesSlide
      wrap()
      wrap('center')
      size 1200px auto
      max-width: 100%
      display block
      margin auto
      .owl-controls
        margin-top 30px
      .item
        col()
        .img-wrapper
          wrap()
          wrap("flexbox")
          wrap("bottom")
          background-repeat: no-repeat
          background-size: cover
          background-position: center
          margin auto
          +below(1024px)
            size 100% 300px
          +above(1025px)
            size 100% 430px
          .specialText
            wrap()
            wrap('flexbox')
            wrap('middle')
            background-color rgba(lightBlue, 0.50)
            size 100% 60px
            color white
            font-size 30px
            font-family: mainFont
            font-weight: 500
            text-align: center
            display: block
            padding-top 14px
  .Featured
    padding-bottom 100px
    +below(767px)
      padding-bottom 50px
    .title
      text-align: center
      h1()
      color: darkBlue
      font-family: otherFont
      font-weight: 700
    #featuredSlide
      wrap()
      wrap('center')
      size 1200px auto
      max-width: 100%
      display block
      margin auto
      .owl-controls
        margin-top 30px
      .item
        col()
        .img-wrapper
          wrap()
          wrap("flexbox")
          wrap("bottom")
          background-repeat: no-repeat
          background-size: cover
          background-position: center
          margin auto
          +below(1024px)
            size 530px 300px
            max-width: 100%
          +above(1025px)
            size auto 300px
            max-width: 530px
          .specialText
            wrap()
            wrap('flexbox')
            wrap('middle')
            background-color rgba(darkBlue, 0.50)
            size 100% 60px
            color white
            font-size 30px
            font-family: mainFont
            font-weight: 500
            text-align: left
            padding-left 40px
            +below(767px)
              padding 0px
              text-align: center
              display: block
              padding-top 14px
        .info
          wrap()
          wrap('center')
          margin auto
          +below(1024px)
            size 530px auto
            max-width: 100%
          +above(1025px)
            size auto auto
            max-width: 530px
          .name
            col()
            col(1,1)
            color darkBlue
            font-family: otherFont
            font-weight: 700
            +below(767px)
              font-size: 18px
              text-align: center
              margin 15px auto 0px
            +above(768px)
              font-size: 20px
              text-align: left
              padding-left 40px
              margin 20px auto 0px
          .price
            col()
            col(1,1)
            color darkBlue
            +below(767px)
              margin 15px auto 0px
              font-size 16px
              text-align: center
            +above(768px)
              margin 5px auto 0px
              font-size 18px
              text-align: left
              padding-left 40px
