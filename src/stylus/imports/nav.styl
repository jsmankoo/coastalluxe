.Nav
  // realtive top 0px
  width 100%
  z-index 9000
  background-color navbarColor
  .wrap
    center(1280px)
    cf()
    &.Mobile
      height 50px
      .col.logo
        column(0.75)
        a
          &:hover
          &:focus
            opacity: 0.8
          img
            size auto 30px
    &.Tablet
      height 50px
      .col.logo
        column(1)
        a
          &:hover
          &:focus
            opacity: 0.8
          img
            size auto 30px
    &.Desktop
      height 160px
      .col.logo
        column(1)
        a
          &:hover
          &:focus
            opacity: 0.8
          img
            size auto 109px
    .menuScroll
      fixed top 0px right 0px
      font-size 25px
      background-color menuScrollColor
      color white
      z-index 9999
      padding 13px
    .col
      height 100%
      position relative
      a
        align('both')
        font-size 20px
        font-weight: 700
