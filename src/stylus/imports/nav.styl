.Nav
  fixed top 0px
  width 100%
  z-index 9000
  background-color navbarColor
  box-shadow: 0px 10px 5px 0px rgba(#000,  0.2)
  opacity: 0.8
  .wrap
    center(1280px)
    cf()
    +below(1280px)
      height 50px
    +above(1281px)
      &.false
        height 160px
        .col.logo a img
          size auto 109px
      &.true
        height 50px
        .col.logo a img
          size auto 30px
    .col
      height 100%
      position relative
      a
        align('both')
        font-size 20px
        font-weight: 700
      &.contact
        column(0.25)
        a
          width 110px
          i.fa
            padding 5px
            float left
          .linkName
            padding 3px
            float right
      &.logo
        +below(767px)
          column(0.75)
          a
            &:hover
            &:focus
              opacity: 0.8
            img
              size auto 30px
        +above(768px)
          column(0.5)
          a
            &:hover
            &:focus
              opacity: 0.8
            img
              size auto 30px
      &.menu
        column(0.25)
        a
          i.fa
            padding 5px
            float right
            +below(767px)
              font-size 25px
          .linkName
            padding 3px
            float left
