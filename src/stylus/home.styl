.Home
  .Top
    background-color rgba(darkBlue, 0.5)
    overflow hidden
    position relative
    +below(767px)
      size 100% 470px
    +between(768px, 1280px)
      size 100% 570px
    +above(1281px)
      size 100% 675px
    .BGVideo
      .video-background
        z-index -10000
        align(both)
        min-width: 100%
        min-height: 100%
        size auto auto
    .BGContent
      align(both)
      width 100%
      +below(767px)
        padding 0px 20px
      +between(768px, 1280px)
        padding 0px 100px
      +above(1281px)
        padding 0px 200px
      .headline
        text-align: center
        font-family: otherFont
        color white
        +below(767px)
          font-size 35px
        +between(768px, 1280px)
          font-size 62px
        +above(1281px)
          font-size 90px
      .bgBorder
        border-bottom 1px solid white
        display: block;
        margin: auto;
        +below(767px)
          width 200px
        +between(768px, 1280px)
          width 500px
        +above(1281px)
          width 700px
      .subheadline
        text-align: center;
        color white
        +below(767px)
          font-size 25px
        +between(768px, 1280px)
          font-size: 32px
        +above(1281px)
          font-size: 40px
  .Featured
    center(1280px)
    background: white
    .Heading
      .title
        text-align: center
        color darkBlue
        font-family otherFont
        font-weight 700
        text-decoration none
        hover-color(lightBlue, true)
        +below(767px)
          font-size 40px
          margin 70px auto 20px
        +above(768px)
          font-size 60px
          margin 95px auto 0px
      .Row
        .all
          column(1/3)
          float right
          text-align: center
          font-family otherFont
          font-weight 700
          font-size 16px
          color darkBlue
          text-decoration none
          margin-top 20px
          margin-bottom 20px
          hover-color(lightBlue, true)
    #featuredSlide
      center(1100px)
      z-index 1000
      margin-top 60px
      .owl-controls
        absolute top -50px
        width 210px
        align(h)
        .owl-page
          span
            size 8px 8px
            background darkBlue
      .item
        size 100% auto
        display block
        margin auto
        z-index 9000
        .img-wrapper
          background-repeat: no-repeat
          background-size: cover
          background-position: center
          position relative
          +below(767px)
            size 100% 215px
          +above(768px)
            size 100% 475px
          .specialText
            absolute bottom 0px
            background-color rgba(lightBlue, 0.50)
            size 100% auto
            color white
            font-size 30px
            font-family: mainFont
            font-weight: 500
            text-align: left
            padding 12px 40px
            +below(767px)
              text-align: center
              display: block
              font-size 25px
              padding 6px 0px
        .info
          margin 30px auto 70px
          .name
            color darkBlue
            font-family: otherFont
            font-weight: 700
            +below(767px)
              font-size: 18px
              text-align: center
              margin 15px auto 0px
            +above(768px)
              font-size: 20px
              text-align: left
              padding-left 40px
              margin 20px auto 0px
          .price
            color darkBlue
            +below(767px)
              margin 15px auto 35px
              font-size 16px
              text-align: center
            +above(768px)
              margin 5px auto 75px
              font-size 18px
              text-align: left
              padding-left 40px
  .Ryan
    background-repeat: no-repeat
    background-size: cover
    background-position: center
    .bgTint
      background-color RyanTint
    .wrap
      center(1280px)
      margin auto
    .name
      text-align center
      color darkBlue
      font-family otherFont
      font-weight 700
    .paragraph
      text-align center
      color darkBlue
    .Mobile
      .name
        margin 50px auto 25px
        font-size 40px
      .image
        img
          display: block
          margin auto
          size 170px auto
      .info
        overflow hidden
        height 378px
        color darkBlue
        font-family: otherFont
        h1
        h2
        h3
        h4
        h5
        h6
          text-align: center
        p
          font-size 14px
          line-height: 25px
          font-weight: 500
          margin 16px auto 0px
          text-align: center
      .more
        center(75px)
        margin 40px auto 50px
        .linkName
          font-size 20px
          margin auto
          float left
          font-family: otherFont
        i.fa
          font-size 18px
          margin auto
          float right
          padding 7px 5px 0px
    // above Tablet and Desktop
    +above(768px)
      .name
        margin 80px auto 50px
        font-size 55px
      .Row
        center(768px)
        .image
          column(1/3)
          img
            size 100% auto
            max-width: 250px
            max-height: 380px
        .info
          color darkBlue
          font-family: otherFont
          column(2/3)
          h1
            h1()
            margin 0px auto
            text-align: center
          h2
            h2()
            margin 0px auto
            text-align: center
          h3
            h3()
            margin 0px auto
            text-align: center
          h4
            h4()
            margin 0px auto
            text-align: center
          h5
            h5()
            margin 0px auto
            text-align: center
          h6
            h6()
            margin 0px auto
            text-align: center
          p
            font-size 16px
            line-height: 25px
            font-weight: 500
            margin 0px auto
            text-align: left
        .socialMedia
          column(1/2)
          margin 30px auto 90px
          text-align: left
          a
            margin auto 20px
            i.fa
              font-size 16px
        .hidden
          size 0px 0px
        .more
          column(1/2)
          margin 30px auto 90px
          text-align: right
          a
            font-family: otherFont
            font-weight: 700
            font-size 16px
  .Explore
    background: white
    +below(767px)
      padding-bottom 60px
    +above(768px)
      padding-bottom 155px
    .wrap
      center(1280px)
      .title
        text-align center
        color darkBlue
        font-family otherFont
        font-weight 700
        +below(767px)
          margin 50px auto 30px
          font-size 40px
        +above(768px)
          font-size 60px
          margin 135px auto 25px
      .exploreBorder
        display block
        margin auto
        size 340px auto
        border 1px solid darkBlue
        +below(767px)
          display: none
      .subtitle
        text-align center
        color darkBlue
        font-weight 500
        margin 20px auto 50px
        font-size 30px
        +below(767px)
          display: none
      .links
        wrap()
        wrap('center')
        +above(768px)
          wrap('gutter', 40)
          wrap('outside', 40)
        .link-wrap
          col()
          +below(767px)
            col(1,1)
          +above(768px)
            col(1,3)
          &:hover
          &:hover
            opacity: 0.90
          .exploreTint
            background-color exploreTint
            +below(767px)
              size 300px 175px
            +above(768px)
              size 100% 250px
          .link
            background-repeat: no-repeat
            background-size: cover
            background-position: center
            display: block
            position relative
            +below(767px)
              margin 20px auto
              size 300px 175px
            +above(768px)
              size 100% 250px
            .titleWrapper
              align(b)
              size 100% auto
              .linkTitle
                color white
                text-align: center
                font-family otherFont
                font-weight 700
                width 100%
                +below(767px)
                  font-size 35px
                +between(768px, 1280px)
                  font-size 40px
                +above(1281px)
                  font-size 55px
              .linkSubtitle
                color white
                text-align: center
                width 100%
                +below(767px)
                  font-size 25px
                +between(768px, 1280px)
                  font-size 25px
                +above(1281px)
                  font-size 30px
